}
<h2>@ViewData["Title"]</h2>
<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
</div>
<hr />
<h4>Elementos de la colecci贸n</h4>
<p>
    <a asp-controller="CollectionItems" asp-action="Create" asp-route-collectionId="@Model.Id" class="btn btn-primary">Agregar elemento</a>
</p>
@if (Model.Items != null && Model.Items.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripci贸n</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Imagen" width="100" />
                    }
                </td>
                <td>
                    <form asp-controller="Wishlist" asp-action="Add" method="post" style="display:inline">
                        <input type="hidden" name="collectionItemId" value="@item.Id" />
                        <input type="hidden" name="owned" value="true" />
                        <button type="submit" class="btn btn-success btn-sm">Lo tengo</button>
                    </form>
                    <form asp-controller="Wishlist" asp-action="Add" method="post" style="display:inline">
                        <input type="hidden" name="collectionItemId" value="@item.Id" />
                        <input type="hidden" name="owned" value="false" />
                        <button type="submit" class="btn btn-info btn-sm">Wishlist</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
