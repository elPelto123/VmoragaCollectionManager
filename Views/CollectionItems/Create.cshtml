@model VmoragaCollectionManager.Models.CollectionItem
@{
    ViewData["Title"] = "Agregar elemento";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" name="collectionId" value="@ViewBag.CollectionId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Imagen referencial</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-controller="Collections" asp-action="Details" asp-route-id="@ViewBag.CollectionId" class="btn btn-secondary">Volver</a>
</form>
